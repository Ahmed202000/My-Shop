<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/item_product_iv_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:padding="@dimen/_15sdp"/>






            <FrameLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline">


                <ImageView
                    android:id="@+id/item_product_iv_favorite"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_favorite_border"
                    android:layout_margin="@dimen/_10sdp"/>


            </FrameLayout>






        </FrameLayout>







        <TextView
            android:id="@+id/item_product_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textTitle"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp" />


        <TextView
            android:id="@+id/item_product_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:inputType="text"
            android:textColor="@color/borderEditText"
            android:textSize="@dimen/_9ssp" />


        <TextView
            android:id="@+id/item_product_tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/_8ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:inputType="text" />




        <TextView
            android:id="@+id/item_product_tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"/>




        <LinearLayout
            android:id="@+id/item_product_iv_cart"
            android:background="@color/backrund"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_to_cart"
                android:textColor="@color/White"
                android:textSize="@dimen/_11ssp"
                android:padding="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_cart_color"
                android:drawablePadding="@dimen/_5sdp"/>


        </LinearLayout>






    </LinearLayout>








</androidx.cardview.widget.CardView>