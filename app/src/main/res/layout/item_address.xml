<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5ssp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_10ssp"
    android:layout_marginEnd="@dimen/_10ssp"
    app:cardCornerRadius="@dimen/_5ssp"
    app:cardElevation="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/item_address_tv_title"
            android:layout_toStartOf="@+id/item_address_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_my_location"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/ibm_bold"
            android:textSize="@dimen/_12ssp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/item_address_lin"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp">



            <ImageView
                android:id="@+id/item_address_iv_edit"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create"/>




            <ImageView
                android:id="@+id/item_address_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"/>



        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>