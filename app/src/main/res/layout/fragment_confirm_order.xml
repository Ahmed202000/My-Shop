<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_continue_to_pay_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_continue_to_pay_iv_bake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_centerVertical="true"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_14ssp"
                android:text="@string/confirm_order"
                android:textColor="@color/White"
                android:layout_centerVertical="true"/>




        </RelativeLayout>





    </androidx.appcompat.widget.Toolbar>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_address"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_edit_text_color">


                <Spinner
                    android:id="@+id/fragment_confirm_order_sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"/>



            </RelativeLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardElevation="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/discount_code"
                            android:textSize="@dimen/_10ssp" />

                        <EditText
                            android:id="@+id/fragment_confirm_order_tv_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="@dimen/_10ssp"
                            android:padding="@dimen/_5sdp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/shape_edit_text"/>



                        <Button
                            android:id="@+id/fragment_confirm_order_btn_send"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:text="@string/send"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10ssp"
                            android:textAllCaps="false"
                            android:background="@drawable/shape_button"
                            android:backgroundTint="@color/borderEditText"
                            android:layout_gravity="center"/>




                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/fragment_confirm_order_lin_discount"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/Discount"
                            android:textSize="@dimen/_10ssp"
                            android:layout_gravity="center"/>





                        <TextView
                            android:id="@+id/fragment_confirm_order_tv_discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="0"
                            android:textSize="@dimen/_10ssp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp" />





                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textSize="@dimen/_14ssp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/ibm_bold"
                            android:textColor="@color/textTitle"
                            android:layout_gravity="center"/>





                        <TextView
                            android:id="@+id/fragment_confirm_order_tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/ibm_bold"
                            android:textColor="@color/textTitle"
                            android:layout_gravity="center"/>





                    </LinearLayout>



                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total"
                            android:textSize="@dimen/_14ssp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/ibm_bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>





                        <TextView
                            android:id="@+id/fragment_confirm_order_tv_total_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/_14ssp"
                            android:fontFamily="@font/ibm_bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>





                    </LinearLayout>





                </LinearLayout>



            </androidx.cardview.widget.CardView>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_10sdp"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <RadioButton
                    android:id="@+id/fragment_confirm_order_rb_cash_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_money"
                    android:layout_marginEnd="@dimen/_15sdp"/>



                <RadioButton
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_money"/>



            </RadioGroup>




            <Button
                android:id="@+id/fragment_confirm_order_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/shape_button"
                android:text="@string/confirm_order"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"/>



        </LinearLayout>




    </ScrollView>





</LinearLayout>

