<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">







    <com.github.ybq.android.spinkit.SpinKitView
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        style="@style/SpinKitView.Large.MultiplePulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/colorAccent" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <ImageView
                android:id="@+id/fragment_reset_password_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_forget_pass" />


            <TextView
                android:id="@+id/fragment_reset_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_reset_password_logo"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:fontFamily="@font/ibm_bold"
                android:text="@string/new_password"
                android:gravity="center"
                android:textColor="@color/textTitle"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/fragment_reset_password_text"
                android:layout_below="@+id/fragment_reset_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_the_password_by_typing_the_new_password_then_re_typing_the_password_again"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/ibm_regular"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/textHintColor"/>






                <EditText
                    android:id="@+id/fragment_reset_password_ed_password"
                    android:layout_below="@+id/fragment_reset_password_text"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:hint="@string/password"
                    android:background="@drawable/shape_edit_text_color"/>





                <EditText
                    android:id="@+id/fragment_reset_password_tv_confirm_password"
                    android:layout_below="@+id/fragment_reset_password_ed_password"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:hint="@string/confirm_password"
                    android:background="@drawable/shape_edit_text_color"/>



            <Button
                android:id="@+id/fragment_reset_password_btn_verification"
                android:layout_below="@+id/fragment_reset_password_tv_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_button"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textStyle="bold" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>