<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/activity_add_complaint_iv_bake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_complaint"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="@dimen/_14ssp" />



    </androidx.appcompat.widget.Toolbar>

    
    <ScrollView
        android:layout_below="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">




        
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_edit_profile_profile_iv_user"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/default_image"
                    android:layout_centerHorizontal="true"
                    app:civ_border_color="@color/textHintColor"
                    app:civ_border_width="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_30sdp"/>
                
                
                <TextView
                    android:id="@+id/activity_edit_profile_profile_tv_upload_image"
                    android:layout_below="@+id/activity_edit_profile_profile_iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_image"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_upload"/>



                <EditText
                    android:id="@+id/activity_edit_profile_profile_tv_name"
                    android:layout_below="@+id/activity_edit_profile_profile_tv_upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/shape_edit_text_color"/>




                <EditText
                    android:id="@+id/activity_edit_profile_profile_tv_email"
                    android:layout_below="@+id/activity_edit_profile_profile_tv_name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/shape_edit_text_color"/>



                <EditText
                    android:id="@+id/activity_edit_profile_profile_tv_phone"
                    android:layout_below="@+id/activity_edit_profile_profile_tv_email"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/shape_edit_text_color"/>



                <Button
                    android:id="@+id/activity_edit_profile_profile_btn_save"
                    android:layout_below="@+id/activity_edit_profile_profile_tv_phone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="@string/save"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/shape_button"
                    android:layout_marginBottom="@dimen/_20sdp"/>




            </RelativeLayout>

        


    </ScrollView>








</RelativeLayout>